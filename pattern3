#include <iostream>
using namespace std;


void pattern1(int n){
    int i=1,j=n,k=0;
    for(i=1;i<=n ; i++){

        for(k=0 ;k<=i-1;k++){
           
                cout<<" ";
             
            
             }
        for(j=n;j>=1;j--){
            cout<<"*";
        }     

    cout<<"\n";

    }
}

int main(){
    int n=5;
    pattern1(n);

    return 0;
}

