#include <iostream>
using namespace std;


void pattern1(int n){

    for(int i=1;i<=n ; i++){

        for(int k=0 ;k<=i-1;k++){
           
                cout<<" ";
             
            
             }
        for(int j=n;j>=i;j--){
            cout<<"*";
        }     

    cout<<"\n";

    }
}

int main(){
    int n=5;
    pattern1(n);

    return 0;
}
